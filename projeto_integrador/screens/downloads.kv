#:kivy 2.0.0

<Downloads>:
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    TopBar:
                        title: 'Downloads'

                    BoxLayout:
                        orientation: 'vertical'

                        BoxLayout:
                            ScrollView:
                                BoxLayout:
                                    id: books_list
                                    orientation: 'vertical'
                                    size_hint_y: None
                                    height: self.minimum_height
                                    spacing: '15dp'
                                    padding: '5dp'

        SideMenu:
            id: side_menu
