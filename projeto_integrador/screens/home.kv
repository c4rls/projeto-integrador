#:kivy 2.0.0

<Home>:
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    TopBar:
                        title: 'In√≠cio'

                    BoxLayout:

                        Widget:
                            size_hint_x: 0.05

                        BoxLayout: # 90% of width
                            orientation: 'vertical'

                            Widget:
                                size_hint_y: 0.1
                            SearchBox:
                                id: search_box
                            BooksList:
                                id: books_list

                        Widget:
                            size_hint_x: 0.05

        SideMenu:
            id: side_menu


<SearchBox@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    size: self.minimum_size
    spacing: '10dp'

    TextInput:
        id: input
        hint_text: 'Pesquisar por...'
        hint_text_color: 0, 0, 0
        font_size: '18dp'
        text_size: self.size
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0
        foreground_color: 0, 0, 0
        multiline: False

    MDFlatButton:
        text: 'Buscar'
        font_size: '14dp'
        text_color: 1, 1, 1
        md_bg_color: 0.12941176470588237, 0.5882352941176471, 0.9529411764705882, 1
        on_release: app.root.current_screen.get_books()

<BooksList@BoxLayout>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None

        MDLabel:
            id: found_books
            text: ''
            font_style: 'H6'
            theme_text_color: 'Primary'
            size: self.texture_size
            halign: 'center'

    ScrollView:
        BoxLayout:
            id: container
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: '20dp'
            padding: '2dp'
